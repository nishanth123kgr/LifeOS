# LifeOS Environment Configuration
# Copy this file to .env and fill in the values

# ======================
# Required Configuration
# ======================

# JWT Secret - MUST be set, no default fallback
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Database connection string
DATABASE_URL=postgresql://lifeos:lifeos_password@localhost:5432/lifeos?schema=public

# ======================
# Optional Configuration
# ======================

# Server port (default: 5000)
PORT=5000

# Environment (development, test, production)
NODE_ENV=development

# JWT token expiration (default: 7d)
JWT_EXPIRES_IN=7d

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info

# ======================
# Database (Docker)
# ======================

POSTGRES_USER=lifeos
POSTGRES_PASSWORD=lifeos_password
POSTGRES_DB=lifeos

# ======================
# Frontend Configuration
# ======================

NEXT_PUBLIC_API_URL=http://localhost:5000
